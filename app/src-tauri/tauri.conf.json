{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Local Comic Reader",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm --dir ../ui dev -- --host",
    "beforeBuildCommand": "pnpm --dir ../ui build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Local Comic Reader",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "useHttpsScheme": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
